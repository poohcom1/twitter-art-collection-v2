div(class=`${styles.tagsGallery}`)
    div(class=`${styles.title}`)
        h1 Tag Gallery
        .help(title="Right click to view more options for tags and images")
            | !{require("/src/assets/img/question-mark.svg")}
        .github
            a(href="https://github.com/poohcom1/twitter-art-tags" target="_blank")
                | !{require("/src/assets/img/github.svg")}
    div(class=`${styles.optionsPanel}`)
        | !{require("/src/assets/img/tag.svg")}
        input#addTag(class=`${styles.addTag} ${styles.tagInput}`, type="text", placeholder="Press enter to add a tag...")
        button#tagExport(style="margin-left: auto")
            | !{require("/src/assets/img/export.svg")}
            | Export Tags
        button#tagImport
            | !{require("/src/assets/img/import.svg")}
            | Import Tags
    hr
    div(class=`${styles.tags}`)
    div(class=`${styles.imageGallery}`)
