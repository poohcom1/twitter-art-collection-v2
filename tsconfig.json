{
    "compilerOptions": {
        "strict": true,
        "target": "ES2017",
        "module": "es2015",
        "outDir": "./dist/",
        "declaration": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "vanilla-context-menu", "./test/**/*"]
}
